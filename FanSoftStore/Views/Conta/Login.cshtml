@model FanSoftStore.UI.ViewModel.UsuarioViewModel
@{
    ViewBag.Title = "Listagem de Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<form method="post">
    <div class="form-group">
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            <span id="emailHelp" class="form-text text-muted" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Senha</label>
            <input asp-for="Senha" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            <span id="emailHelp" class="form-text text-muted" asp-validation-for="Senha"></span>
        </div>
        <div class="form-check">
            <input asp-for="Lembrar" type="checkbox" class="form-check-input">
            <label asp-for="Lembrar" class="form-check-label" for="exampleCheck1">Lembrar a senha</label>
        </div>
        <button type="submit" class="btn btn-primary">Entra r</button>
    </div>
</form>
@section scriptValidations{
    @* ADD VALIDATIONS SCRIPTS *@
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/javascript-methods.js"></script>
}


