@model ProdutoModel
@{
    ViewBag.Title = (Model.Id == 0 ? "Adicionar de Produto": "Editar Produto");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" autofocus="autofocus">
    </div>
    <div class="form-group">
        <label asp-for="TipoProdutoId">Tipo</label>
        <select asp-for="TipoProdutoId" asp-items="@ViewBag.Tipo" class="form-control">
            <option value="">Selecione...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Valor">Valor</label>
        <input type="text" asp-for="Valor" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" rows="4" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>

