@model ProdutoModel
@{
    ViewBag.Title = (Model.Id == 0 ? "Adicionar de Produto" : "Editar Produto");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" autofocus="autofocus">
        <small><span asp-validation-for="Nome" class="text-danger"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="TipoProdutoId">Tipo</label>
        <select asp-for="TipoProdutoId" asp-items="@ViewBag.Tipo" class="form-control">
            <option value="">Selecione...</option>
        </select>
        <small><span asp-validation-for="TipoProdutoId" class="text-danger"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="Valor">Valor</label>
        <input type="text" asp-for="Valor" class="form-control">
        <small><span asp-validation-for="Valor" class="text-danger"></span></small>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" rows="4" class="form-control"></textarea>
        <small><span asp-validation-for="Descricao" class="text-danger"></span></small>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>

</form>

@section scriptValidations{
    @* ADD VALIDATIONS SCRIPTS *@
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
